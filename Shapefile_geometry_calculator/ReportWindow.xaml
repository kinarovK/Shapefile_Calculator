<Window x:Class="Shapefile_geometry_calculator.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shapefile_geometry_calculator"
        mc:Ignorable="d"
        Title="ReportWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Folder Name:"/>
            <TextBox Text="{Binding FolderName}" IsReadOnly="True"/>

            <TextBlock Text="Min:"/>
            <TextBox Text="{Binding Min}" IsReadOnly="True"/>

            <TextBlock Text="Nax:"/>
            <TextBox Text="{Binding Max}" IsReadOnly="True"/>

            <TextBlock Text="Avg:"/>
            <TextBox Text="{Binding Avg }" IsReadOnly="True"/>

            <TextBlock Text="Sum:"/>
            <TextBox Text="{Binding Sum}" IsReadOnly="True"/>

            <TextBlock Text="Median:"/>
            <TextBox Text="{Binding Median}" IsReadOnly="True"/>

            <TextBlock Text="Count"/>
            <TextBox Text="{Binding Count}" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Window>
